import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        // Read the size of the array
        int n = sc.nextInt();
        int[] a = new int[n];
        
        // Fill the array
        for (int i = 0; i < n; i++) {
            a[i] = sc.nextInt();
        }
        sc.close();
        
        int negativeSubarraysCount = 0;
        
        // Loop through each possible starting point
        for (int i = 0; i < n; i++) {
            int currentSum = 0;
            
            // Loop through each possible ending point starting from i
            for (int j = i; j < n; j++) {
                // Add the current element to the running sum of the subarray [i...j]
                currentSum += a[j];
                
                // If the sum is negative, increment our counter
                if (currentSum < 0) {
                    negativeSubarraysCount++;
                }
            }
        }
        
        // Print the final result
        System.out.println(negativeSubarraysCount);
    }
}
